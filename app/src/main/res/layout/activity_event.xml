<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/today_date_text"
        android:textSize="18dp"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_time"
            android:textSize="18dp"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:id="@+id/course_all_button"
            android:text="@string/course_time_button"
            android:textSize="18dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/course_time_text"
        android:id="@+id/all_course"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/study_time"
            android:textSize="18dp"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/study_button"
            android:text="@string/study_time_button"
            android:textSize="18dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/study_text"
        android:text="@string/study_time_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meeting_time"
            android:textSize="18dp"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/meetting_time_button"
            android:text="@string/meeting_time_button"
            android:textSize="18dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_time_text"
        android:text="@string/meeting_time_text"
        android:gravity="left"
        android:layout_marginLeft="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_time"
            android:textSize="18dp"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/daily_time_button"
            android:text="@string/daily_time_button"
            android:textSize="18dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/daily_text"
        android:text="@string/daily_time_text"
        />
</LinearLayout>